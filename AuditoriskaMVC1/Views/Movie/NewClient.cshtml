@model AuditoriskaMVC1.Models.Client
@{
    ViewBag.Title = "NewClient";
}

<h2>Add new client</h2>

@using (Html.BeginForm("NewClient", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.NameClient)
        @Html.TextBoxFor(m => m.NameClient, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NameClient)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Age)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Telephone)
        @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Telephone)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.isSubscribed) Subscribed to newsletter?
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

